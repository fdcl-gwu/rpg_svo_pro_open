<!-- Launch File for running svo with ceres backend from bag-file -->
<launch>
  <arg name="calib_file" default="$(find svo_ros)/param/calib/fdcl_mono.yaml"/>

  <!-- SVO node -->
  <node pkg="svo_ros" type="svo_node" name="svo" clear_params="true" output="screen" args="--v=0" >

    <!-- Camera topic to subscribe to -->
    <param name="cam0_topic" value="/cam0/image_raw" type="str" />
	
    <!-- Imu topic to subscribe to -->
    <param name="imu_topic" value="/imu0" type="str" />

    <!-- Camera calibration file -->
    <param name="calib_file" value="$(arg calib_file)" />

    <!--Parameters-->
    <rosparam file="$(find svo_ros)/param/global_map.yaml" />
    <param name="runlc" value="true" />
    
  </node>

  <node name="throttled_cam" pkg="topic_tools" type="throttle"  output="screen" args="messages /cam0/image_raw 5.0 /low_cam0" />
  <node name="throttled_sv0_cam" pkg="topic_tools" type="throttle"  output="screen" args="messages /svo/image/0 5.0 /low_svo_image" />

  <!-- RVIZ -->
  <!-- node name="vis" pkg="rviz" type="rviz" args=" -d $(find svo_ros)/rviz_config_gm.rviz" /-->
</launch>
